<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freeparking.zack.a_plus_practice.Category902"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Command-Line Tools"
                android:id="@+id/commandLineToolsButton"
                android:background="@drawable/button_border"
                android:onClick="onCommandLineToolsButtonClick"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Windows Features"
                android:id="@+id/windowsFeaturesButton"
                android:background="@drawable/button_border"
                android:onClick="onWindowsFeaturesButtonClick"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_below="@+id/commandLineToolsButton" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
